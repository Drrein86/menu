{
  "version": 2,
  "builds": [
    {
      "src": "server/server-sqlite.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "display/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/server-sqlite.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/server/server-sqlite.js"
    },
    {
      "src": "/display/(.*)",
      "dest": "/display/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}

